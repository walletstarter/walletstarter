<script>
  (function () {
    // Capture simple query param for AADS/source tracking and put it into hidden input
    function getQueryParam(name) {
      const params = new URLSearchParams(window.location.search);
      return params.get(name);
    }

    const sourceField = document.getElementById("source");
    if (sourceField) {
      var aadsTag = getQueryParam("aads");
      if (aadsTag) {
        sourceField.value = "aads:" + aadsTag;
      } else {
        sourceField.value = "direct";
      }
    }

    // Optional: console log basic tracking info for quick inspection
    console.log("Offer form source:", sourceField ? sourceField.value : "n/a");
  })();
</script>
